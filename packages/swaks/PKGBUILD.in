pkgname='swaks'
realname=swaks
groups=(archtrack archtrack-info-gathering)
pkgver=20130209.0
pkgrel=1
provides=("swaks=$pkgver")
conflicts=(swaks)
pkgdesc='Swiss Army Knife SMTP; Command line SMTP testing, including TLS and AUTH'
arch=('any')
url="http://jetmore.org/john/code/${realname}/"
license=('GPL')
depends=('perl-net-dns')
source=("http://jetmore.org/john/code/${realname}/files/${realname}-${pkgver}.tar.gz")
md5sums=('281af4f487ada31cda1408a19e8da5b4')

package() {
  cd "${realname}-${pkgver}"
  install -m755 -D "${realname}" "$pkgdir/usr/bin/${realname}"
  cd doc
  pod2man ref.pod "${realname}.1"
  install -m644 -D "${realname}.1" "$pkgdir/usr/share/man/man1/${realname}.1"
}

