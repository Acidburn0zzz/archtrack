pkgname=%PKGNAME%
realname=fcrackzip
groups=(archtrack archtrack-hardware-hacking archtrack-password-attacks)
pkgver=1.0
pkgrel=3
provides=("fcrackzip=$pkgver")
conflicts=(fcrackzip)
pkgdesc=%PKGDESC%
arch=('i686' 'x86_64')
url="http://oldhome.schmorp.de/marc/$realname.html"
license=('GPL')
depends=(glibc)
source=(http://oldhome.schmorp.de/marc/data/$realname-$pkgver.tar.gz)
md5sums=('254941f51759f9425965f4b05fe7ac2c')

build() {
  cd ${srcdir}/$realname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/$realname-$pkgver

  make DESTDIR=${pkgdir} install
  mv ${pkgdir}/usr/bin/zipinfo ${pkgdir}/usr/bin/fzipinfo
}
