pkgname=%PKGNAME%
pkgver=1.0.4
groups=(%CATEGORIES%)
pkgrel=1
pkgdesc=%PKGDESC%
url=('http://www.digifail.com/software/bluelog.shtml')
arch=('i686' 'x86_64')
license=('GPL2')
makedepends=('bluez')
source=("http://dl.packetstormsecurity.net/wireless/$pkgname-$pkgver.tar.gz")
