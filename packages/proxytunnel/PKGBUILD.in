pkgname=%PKGNAME%
realname=proxytunnel
groups=(archtrack archtrack-maintaining-access)
pkgver=1.9.0
pkgrel=3
provides=("proxytunnel=$pkgver")
conflicts=(proxytunnel)
pkgdesc=%PKGDESC%
arch=('i686' 'x86_64')
url="http://proxytunnel.sourceforge.net"
license=('GPL')
depends=('openssl')
source=(http://downloads.sourceforge.net/sourceforge/$realname/$realname-$pkgver.tgz)
md5sums=('d74472b89c3f3b3b0abf6bd809ae34c2')

build() {
  cd $srcdir/$realname-$pkgver
  sed -i 's|PREFIX =/usr/local|PREFIX =/usr|g' Makefile
  make
  make DESTDIR=$pkgdir install
}
