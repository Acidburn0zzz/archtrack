pkgname=%PKGNAME%
pkgver=1.1
pkgrel=1
epoch=
pkgdesc=%PKGDESC%
arch=('any')
url="http://code.google.com/p/hash-identifier/"
license=('GPL3')
groups=%GROUPS%
depends=(python2)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://hash-identifier.googlecode.com/files/Hash_ID_v1.1.py"
)
noextract=()
md5sums=('6ca580c5cad2c095cb5396c9220e50dd')

build() {
  cd "${srcdir}"
  sed -i -e "s|env python|env python2|" -e 's|||' Hash_ID_v1.1.py
}

package() {

  cd "${srcdir}"
  install -D -m 755 Hash_ID_v1.1.py "${pkgdir}/usr/bin/hash-id.py"
}

